package com.dxdroid.email;

import android.app.Activity;
import android.os.Bundle;
import android.util.Log;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Toast;

public class RxEmail2Activity extends Activity {
    /** Called when the activity is first created. */
	@Override
    public void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.main);
        
        EditText sender = (EditText)findViewById(R.id.emailSender);
        EditText pass = (EditText)findViewById(R.id.emailPassword);
        EditText address = (EditText)findViewById(R.id.emailaddress);
        EditText subject = (EditText)findViewById(R.id.emailsubject);
        EditText body = (EditText)findViewById(R.id.emailSender);

        final Button send = (Button) this.findViewById(R.id.send);
        send.setOnClickListener(new View.OnClickListener() {

            public void onClick(View v) {
                // TODO Auto-generated method stub

                try {   
                    GMailSender sender = new GMailSender();
                    sender.sendMail("This is Subject",   
                            "This is Body",   
                            "aysonje@gmail.com",   
                            "jester_vg086@yahoo.com.ph");
                    Toast.makeText(getApplicationContext(), "done",Toast.LENGTH_SHORT).show();
                } catch (Exception e) {   
                    Log.e("SendMail", e.getMessage(), e);   
                } 

            }
        });

    }
}